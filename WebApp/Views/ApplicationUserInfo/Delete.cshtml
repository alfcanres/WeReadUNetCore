@model ApplicationUserInfoReadDTO

@if (Model != null)
{

    ViewData["Title"] = "Delete User: " + Model.UserName;


    <div>
        Are you sure you want to delete this? (All coments and posts will be also deleted)
    </div>

    <partial name="_ValidationSummary" model=@ViewData />

    <form asp-action="Delete" method="post">

        <div class="form-group">
            <label asp-for="Id">Id</label>
            <input asp-for="Id" class="form-control" disabled="disabled" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ProfilePicture">Profile Picture</label>
            <input asp-for="ProfilePicture" class="form-control" disabled="disabled" />
        </div>


        <div class="form-group">
            <label asp-for="UserName">Username</label>
            <input asp-for="UserName" class="form-control" disabled="disabled" />
        </div>


        <div class="form-group">
            <label asp-for="FirstName">FirstName</label>
            <input asp-for="FirstName" class="form-control" disabled="disabled" />
        </div>

        <div class="form-group">
            <label asp-for="LastName">LastName</label>
            <input asp-for="LastName" class="form-control" disabled="disabled" />
        </div>

        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-controller="ApplicationUserInfo" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
}
else
{
    <div class="alert alert-danger">
        <h3>There is no user with this id</h3>
    </div>
}