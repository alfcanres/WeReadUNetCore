@model PostCreateDTO

@{
    ViewData["Title"] = "Post";
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var key in ViewData.ModelState.Keys)
            {
                foreach (var error in ViewData.ModelState[key].Errors)
                {
                    <li>@error.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}

<form asp-action="Create" method="post">
    
    <input asp-for="ApplicationUserInfoId" type="hidden" />

    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PostTypeId">Type</label>
        <select asp-for="PostTypeId" asp-items="@ViewBag.PostTypes" class="form-control">
            <option value="">--SELECT--</option>
        </select>
        <span asp-validation-for="PostTypeId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MoodTypeId">Mood</label>
        <select asp-for="MoodTypeId" asp-items="@ViewBag.MoodTypes" class="form-control">
            <option value="">--SELECT--</option>
        </select>
        <span asp-validation-for="PostTypeId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Text">Text</label>
        <textarea asp-for="Text" class="form-control"></textarea>
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-controller="Post" asp-action="MyPosts" class="btn btn-secondary">Cancel</a>
</form>
